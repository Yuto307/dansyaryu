<div class="container d-flex flex-column">
  <div class="row align-items-center justify-content-center g-0 min-vh-100">
    <div class="col-lg-5 col-md-8 py-8 py-xl-0">
      <!-- Card -->
      <div class="card shadow">
        <!-- Card body -->
        <div class="card-body p-6">
          <div class="mb-4">
            <h1 class="mb-1 fw-bold"><%= t('user_sessions.new.title') %></h1>
            <span><%= t('user_sessions.new.already_have_an_account?') %>
              <%= link_to t('user_sessions.new.sign_up'), 'users/new', class: 'ms-1' %>
            </span>
          </div>
          <!-- Form -->
          <%= form_with url: login_path do |f| %>
            <%#= render 'shared/error_messages', object: f.object %>
            <div class="mb-3">
              <%= f.label t('user_sessions.new.email') %>
              <%= f.email_field :email, class: 'form-control' %>
            </div>
            <div class="mb-3">
              <%= f.label t('user_sessions.new.password') %>
              <%= f.password_field :password, class: 'form-control' %>
            </div>
            <div class="d-grid">
              <%= f.submit t('defaults.login'), class: 'btn btn-primary' %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

