if status == trash
  $("#js-delete-vote-button-for-post-<%= @post.id %>").replaceWith("<%= j(render('posts/trash', post: @post)) %>");
  $("#js-update-untrash-button-for-post-<%= @post.id %>").replaceWith("<%= j(render('posts/untrash', post: @post)) %>");
elsif status == untrash
  $("#js-update-trash-button-for-post-<%= @post.id %>").replaceWith("<%= j(render('posts/trash', post: @post)) %>");
  $("#js-delete-vote-button-for-post-<%= @post.id %>").replaceWith("<%= j(render('posts/untrash', post: @post)) %>");
end