<% content_for(:title, t('.title')) %>
<div class="container mb-5 pt-2">
  <h1><%= t('.title') %></h1>
  <div class="row">
    <div class="col-md-12 mb-3">
      <%= render 'search_form' %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <table class="table table-striped">
        <thead>
        <tr>
          <th scope="col"><%= Category.human_attribute_name(:id) %></th>
          <th scope="col"><%= Category.human_attribute_name(:name) %></th>
          <th scope="col"><%= Category.human_attribute_name(:created_at) %></th>
          <th scope="col"><%= link_to t('defaults.new'), new_admin_category_path, class: 'btn btn-info' %></th>
        </tr>
        </thead>
        <tbody>
        <%= render @categories %>
        </tbody>
      </table>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <!-- ページネーション -->
      <%= paginate @categories %>
    </div>
  </div>
</div>
