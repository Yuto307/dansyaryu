<%= link_to votes_path(post_id: post.id, status: 'trash'),
            id: "js-vote-button-for-post-#{post.id}",
            method: :post,
            remote: true do %>
  <%= "捨てていい" %>
<% end %>
<%= link_to votes_path(post_id: post.id, status: 'untrash'),
            id: "js-vote-button-for-post-#{post.id}",
            method: :post,
            remote: true do %>
  <%= "捨てないで" %>
<% end %>
