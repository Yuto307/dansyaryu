<% content_for(:title, t('.title')) %>
<div class="container pt-3">
  <div class="row">
    <div class="col-lg-10 offset-lg-1">
      <!-- 検索フォーム -->
      <form>
        <%= render 'search_form', url: drafts_posts_path %>
      </form>
    </div>
  </div>

  <h3 class="side-title">カテゴリー</h3>
  <ul>
    <% @categories.each do |category| %>
      <li>
        <%= link_to category.name, favorites_posts_path(category_id: category.id) %>
      </li>
    <% end %>
  </ul>
  
  <!-- 掲示板一覧 -->
  <div class="row">
    <div class="col-12">
      <div class="row">
        <% if @draft_posts.present? %>
          <%= render @draft_posts %>
        <% else %>
          <p><%= t('.no_result') %></p>
        <% end %>
      </div>
      <!-- ページネーション -->
      <%= paginate @draft_posts %>
    </div>
  </div>
</div>